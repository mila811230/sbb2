<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mysite.sbb2.MessageMapper">
    <select id="getMessageById" resultType="com.mysite.sbb2.Message">
        SELECT * FROM hello WHERE id = #{id}
    </select>
    
    <insert id="insertMessage" parameterType="com.mysite.sbb2.Message">
    	INSERT INTO hello (message) VALUES (#{message})
    </insert>

    <select id="getMessagesLimit10" resultType="com.mysite.sbb2.Message">
        SELECT * FROM hello ORDER BY id DESC LIMIT 10;
    </select>
</mapper>